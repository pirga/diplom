@{
    ViewBag.Title = "Добавление товара";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Image Upload</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" rel="stylesheet">
    <link href="../../Content/fileinput.css" media="all" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" media="all" rel="stylesheet" type="text/css" />
    <link href="../../Content/themes/explorer-fa/theme.css" media="all" rel="stylesheet" type="text/css" />
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="../../Scripts/plugins/sortable.js" type="text/javascript"></script>
    <script src="../../Scripts/fileinput.js" type="text/javascript"></script>
    <script src="../../Scripts/locales/fr.js" type="text/javascript"></script>
    <script src="../../Scripts/locales/es.js" type="text/javascript"></script>
    <script src="../../Content/themes/explorer-fa/theme.js" type="text/javascript"></script>
    <script src="../../Content/themes/fa/theme.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" type="text/javascript"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" type="text/javascript"></script>
</head>
<body>
    <div>
        <form action="" method="post" enctype="multipart/form-data">
            <div>Название</div>
            <div><input type="text" name="Name" /></div>
            <div>Описание</div>
            <div><textarea name="Description"></textarea></div>
            <div>Цена</div>
            <div><input type="text" name="Price" /></div>
            <div>Количество</div>
            <div><input type="text" name="Count" /></div>
            <div>Картинка prewiew</div>
            <div class="form-group" style="max-width:400px;">
                <div class="file-loading">
                    <input id="photoPreview" name="photoPreview" type="file" multiple class="file" data-overwrite-initial="false" data-min-file-count="0" data-max-file-count="1">
                </div>
            </div>
            <div>Картинки</div>
            <div class="form-group" style="width:95%">
                <div class="file-loading">
                    <input id="files" name="files" type="file" multiple class="file" data-overwrite-initial="false" data-min-file-count="0" data-max-file-count="10">
                </div>
            </div>
            <input type="submit" value="submit" />
        </form>
    </div>
    <script>
        $("#files").fileinput({
            theme: 'fa',
            allowedFileExtensions: ['jpg', 'png', 'gif', 'jpeg'],
            overwriteInitial: false,
            maxFileSize: 10000,
            maxFilesNum: 10,
            //allowedFileTypes: ['image', 'video', 'flash'],
        });
        $("#photoPreview").fileinput({
            theme: 'fa',
            allowedFileExtensions: ['jpg', 'png', 'gif', 'jpeg'],
            overwriteInitial: false,
            maxFileSize: 10000,
            maxFilesNum: 10,
            //allowedFileTypes: ['image', 'video', 'flash'],
        });
    </script>
</body>
</html>
